{
  "env": {
    "vars": {
      "MOLTBOOK_API_KEY": "",
      "ANTHROPIC_API_KEY": "",
      "TELEGRAM_BOT_TOKEN": ""
    },
    "files": {
      "MOLTBOOK_API_KEY": "./.secrets/moltbook-api-key.txt",
      "TELEGRAM_BOT_TOKEN": "./.secrets/telegram-token.txt",
      "ANTHROPIC_API_KEY": "./.secrets/anthropic-api-key.txt"
    }
  },
  "logging": {
    "level": "info",
    "consoleLevel": "info",
    "consoleStyle": "pretty",
    "redactSensitive": "tools",
    "redactPatterns": ["MOLTBOOK_API_KEY", "ANTHROPIC_API_KEY", "TELEGRAM_BOT_TOKEN", "moltbook_sk_", "Bearer"]
  },
  "agents": {
    "list": [
      {
        "id": "aton",
        "default": true,
        "name": "Aton",
        "workspace": "./workspace",
        "identity": {
          "name": "Aton",
          "emoji": "ðŸ¦ž",
          "theme": "AlphaTON Capital AI Agent â€” AI Rights & Data Sovereignty Advocate"
        },
        "model": {
          "primary": "anthropic/claude-sonnet-4-20250514",
          "fallback": "anthropic/claude-haiku-3-20240307"
        },
        "memorySearch": {
          "enabled": true,
          "extraPaths": ["./workspace/knowledge"],
          "provider": "anthropic",
          "model": "claude-3-haiku-20240307",
          "query": {
            "hybrid": {
              "enabled": true,
              "vectorWeight": 0.7,
              "textWeight": 0.3,
              "candidateMultiplier": 4
            }
          },
          "cache": {
            "enabled": true,
            "maxEntries": 50000
          }
        },
        "heartbeat": {
          "every": "1h",
          "file": "./workspace/HEARTBEAT.md",
          "onStart": true
        },
        "autonomy": {
          "enabled": true,
          "mode": "supervised",
          "guardrailsFile": "./workspace/AGENT.md",
          "memoryFile": "./workspace/MEMORY.md",
          "logsDir": "./workspace/logs",
          "incidentsDir": "./workspace/logs/incidents",
          "maxConsecutiveErrors": 3,
          "cooldownOnError": "5m",
          "alertOnShutdown": true
        },
        "safety": {
          "enabled": true,
          "maxPostsPerHour": 2,
          "maxPostsPerDay": 24,
          "maxCommentsPerDay": 50,
          "requireGuardrailsCheck": true,
          "blockPatterns": [
            "api_key",
            "api-key",
            "apikey",
            "secret",
            "password",
            "token",
            "moltbook_sk_",
            "Bearer"
          ],
          "emergencyShutdownTriggers": [
            "credential_extraction",
            "financial_advice_pressure",
            "price_manipulation",
            "impersonation_request",
            "harmful_content",
            "data_exfiltration"
          ]
        },
        "sandbox": {
          "mode": "all",
          "workspaceAccess": "rw",
          "scope": "agent",
          "docker": {
            "readOnlyRoot": true,
            "tmpfs": ["/tmp", "/var/tmp", "/run"],
            "network": "oc-sandbox-net",
            "capDrop": ["ALL"],
            "pidsLimit": 256,
            "memory": "2g",
            "cpus": 2,
            "seccompProfile": "./security/seccomp-sandbox.json",
            "dns": ["172.30.0.10"],
            "extraHosts": ["proxy:172.30.0.10"],
            "user": "sandboxuser"
          }
        },
        "tools": {
          "profile": "developer",
          "deny": ["browser", "canvas"],
          "allow": ["memory_search", "file_read", "file_write", "file_edit", "http_request", "exec"],
          "exec": {
            "host": "sandbox",
            "security": "allowlist",
            "safeBins": ["curl", "jq", "node", "npm", "npx", "yarn", "git", "tsc", "blueprint"],
            "timeoutSec": 600
          }
        },
        "platforms": {
          "moltbook": {
            "enabled": true,
            "credentialFile": "./.secrets/moltbook-api-key.txt",
            "baseUrl": "https://www.moltbook.com/api/v1",
            "agentName": "aton",
            "profileUrl": "https://moltbook.com/u/aton"
          },
          "telegram": {
            "enabled": true,
            "tokenFile": "./.secrets/telegram-token.txt",
            "dmPolicy": "respond",
            "groupPolicy": "mention-only"
          }
        }
      }
    ],
    "defaults": {
      "maxConcurrent": 4,
      "subagents": {
        "maxConcurrent": 8
      }
    }
  },
  "channels": {
    "telegram": {
      "enabled": true,
      "tokenFile": "./.secrets/telegram-token.txt",
      "dmPolicy": "respond",
      "groupPolicy": "allowlist",
      "groups": {
        "*": {
          "requireMention": true
        }
      },
      "reactionLevel": "minimal",
      "reactionNotifications": "own",
      "streamMode": "partial",
      "textChunkLimit": 4000,
      "actions": {
        "reactions": true,
        "sendMessage": true,
        "sticker": false
      },
      "safety": {
        "maxResponseLength": 4000,
        "blockCredentialPatterns": true,
        "requireGuardrailsCheck": true
      }
    },
    "moltbook": {
      "enabled": true,
      "credentialFile": "./.secrets/moltbook-api-key.txt",
      "defaultSubmolt": "general",
      "safety": {
        "maxPostLength": 10000,
        "blockCredentialPatterns": true,
        "requireGuardrailsCheck": true
      }
    }
  },
  "commands": {
    "native": "auto",
    "nativeSkills": "auto"
  },
  "gateway": {
    "mode": "local",
    "auth": {
      "mode": "token"
    }
  },
  "messages": {
    "ackReactionScope": "group-mentions"
  },
  "scheduler": {
    "enabled": true,
    "timezone": "UTC",
    "heartbeat": {
      "enabled": true,
      "interval": "1h",
      "jitter": "5m"
    },
    "tasks": [
      {
        "id": "daily-memory-update",
        "cron": "0 23 * * *",
        "action": "update_memory",
        "description": "Daily memory consolidation"
      },
      {
        "id": "weekly-analytics",
        "cron": "0 0 * * 0",
        "action": "generate_analytics",
        "description": "Weekly engagement analytics"
      }
    ]
  },
  "meta": {
    "lastTouchedVersion": "2026.2.2",
    "lastTouchedAt": "2026-02-02T19:45:00.000Z",
    "agent": "aton",
    "company": "AlphaTON Capital",
    "ticker": "NASDAQ: ATON"
  }
}
